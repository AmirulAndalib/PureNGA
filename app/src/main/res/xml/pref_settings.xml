<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="other"
        android:title="@string/other">

        <Preference
            android:key="reopen_nga"
            android:title="@string/reopen_nga" />

    </PreferenceCategory>

    <PreferenceCategory android:title="净化设置">

        <CheckBoxPreference
            android:defaultValue="true"
            android:enabled="false"
            android:key="block_splash_ad"
            android:summary="@string/block_splash_ad_summary"
            android:title="@string/block_splash_ad" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:enabled="false"
            android:key="block_post_ad"
            android:summary="@string/block_post_ad_summary"
            android:title="@string/block_post_ad" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:enabled="false"
            android:key="crack_ad_task"
            android:summary="@string/crack_ad_task_summary"
            android:title="@string/crack_ad_task" />

        <Preference
            android:key="hide_icon"
            android:summary="@string/hide_icon_summary"
            android:title="@string/hide_icon" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="about"
        android:title="@string/about">

        <Preference
            android:key="running_status"
            android:title="@string/running_status" />

        <Preference
            android:key="version"
            android:title="@string/version" />

        <Preference
            android:key="author"
            android:summary="@string/author_summary"
            android:title="@string/author" />

        <Preference
            android:key="donate"
            android:summary="@string/donate_summary"
            android:title="@string/donate" />

    </PreferenceCategory>

</PreferenceScreen>